.hola-event-card
  border-radius: 5px
  box-shadow: none
  text-decoration: none;
  &:hover, &:active
    box-shadow: 0 0 0 3px rgba(255,255,255,.2) inset
  & *
    color: #fff
  & .archive-article-title
    font-size: 1.2em
    line-height: 2em
    &:hover, &:active
      color: inherit
  &.hola-event-card-conf
    background-image: linear-gradient(131deg, #006FFF 2%, #1BE6FF 90%)
  &.hola-event-card-meetup
    background-image: linear-gradient(131deg, #FF4700 2%, #FFAF1B 90%)
  &.hola-event-card-connect
    background-image: linear-gradient(131deg, #00B519 2%, #00FF30 90%)

.hola-iconed
  padding-right: 1em
.hola-iconed:before
  font-family: FontAwesome
  letter-spacing: .5em
.hola-iconed-clock:before
  content: '\f017'
.hola-iconed-city:before
  content: '\f0f7'

.hola-no-underline
  text-decoration: none